[color]
  diff = auto
  status = auto
  branch = auto
[core]
  excludesfile = <%= ENV['HOME'] %>/.gitignore
  editor = vi
  whitespace = trailing-space,space-before-tab,indent-with-non-tab
[apply]
  whitespace = nowarn
[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%cr)%Creset
[branch]
  autosetupmerge = true
  autosetuprebase = always
[branch "master"]
  remote = origin
  merge = refs/heads/master
[branch "*branch-name*"]
  rebase = true
[push]
  default = current
