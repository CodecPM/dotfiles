#!/bin/bash

HISTCONTROL=ignoreboth
HISTSIZE=1000
HISTFILESIZE=2000

shopt -s histappend
shopt -s checkwinsize

[ -e "$WORKSPACE" ] || WORKSPACE="$HOME/Workspace"
export WORKSPACE

## window title
title() {
  t="${USER}@${HOSTNAME}: $*"
  echo -n "";
}

export PS1="\[\033[36m\]\u@\[\033[36m\]\h:\w \[\033[33m\]\$(parse_git_branch)\$(parse_svn_branch)\[\033[00m\]$\[\033[00m\] "
export CLICOLOR=1
export LESS="-RX"
export EDITOR="vi"
#export LSCOLORS=DxGxcxdxCxegedabagacad
export TERM=xterm-color

#keychain --quiet --quick --timeout 15 && . ~/.keychain/*-sh
export NODE_ENV=development
export RACK_ENV=development

cd ~/Workspace
